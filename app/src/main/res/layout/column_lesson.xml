<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="73dp"
        android:background="@null">
        <androidx.cardview.widget.CardView
            android:id="@+id/day"
            android:layout_width="279dp"
            android:layout_height="63dp"
            android:layout_marginStart="41dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#FCEB77"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lessonNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:layout_toStartOf="@id/lessonName"
                    android:fontFamily="@font/circularstdblack"
                    android:gravity="center"
                    android:textColor="#504604"
                    android:textSize="25sp"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/lessonType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lessonNumber"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="-4dp"
                    android:layout_toStartOf="@+id/lessonName"
                    android:fontFamily="@font/circularstdblack"
                    android:gravity="center"
                    android:textColor="#504604"
                    android:textSize="25sp"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/lessonName"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/circularstdblack"
                    android:gravity="center"
                    android:maxLines="2"
                    android:minLines="2"
                    android:textSize="12sp"
                    android:textColor="#504604"/>

                <TextView
                    android:id="@+id/subgroupNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/prepodName"
                    android:layout_below="@+id/lessonName"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/circularstdblack"
                    android:maxLines="1"
                    android:textColor="#504604"
                    android:textSize="9sp" />
    
                <TextView
                    android:id="@+id/prepodName"
                    android:textSize="10sp"
                    android:fontFamily="@font/circularstdblack"
                    android:textColor="#504604"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
    
                <TextView
                    android:id="@+id/audit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/circularstdblack"
                    android:textColor="#504604"
                    android:textSize="12sp"
                    android:maxLines="1"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</LinearLayout>